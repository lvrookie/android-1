<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sims2013.disponif"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sims2013.disponif.activities.HomeActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.sims2013.disponif.activities.AvailabilityActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:theme="@style/MyActionBarTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.sims2013.disponif.activities.AvailabilityListActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:theme="@style/MyActionBarTheme"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.sims2013.disponif.client.ClientTestActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/title_activity_client_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/applicationId" />
    </application>

</manifest>