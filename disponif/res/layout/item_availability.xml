<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfonts="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

     <ImageView
        android:id="@+id/item_availability_icon_category"
        android:layout_width="48dp"
        android:layout_height="48dp"
		android:layout_marginLeft="10dp"
        android:contentDescription="@string/blank_content_description" />

    <TextView
        android:id="@+id/item_availability_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_availability_icon_category" />

    <TextView
        android:id="@+id/item_availability_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
        android:layout_below="@id/item_availability_startDate"
        android:layout_toRightOf="@id/item_availability_icon_category" />

    <TextView
        android:id="@+id/item_availability_category_and_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
        android:layout_below="@id/item_availability_endDate"
        android:layout_toRightOf="@id/item_availability_icon_category" />

    <ImageView
        android:id="@+id/item_availability_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/blank_content_description" />

</RelativeLayout>