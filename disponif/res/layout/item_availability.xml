<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfonts="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <com.facebook.widget.ProfilePictureView
        android:id="@+id/item_availability_user_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:contentDescription="@string/blank_content_description"
        facebook:preset_size="normal" />

    <TextView
        android:id="@+id/item_availability_startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_availability_user_profile_picture" />

    <TextView
        android:id="@+id/item_availability_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_availability_startDate"
        android:layout_toRightOf="@id/item_availability_user_profile_picture" />

    <TextView
        android:id="@+id/item_availability_category_and_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_availability_endDate"
        android:layout_toRightOf="@id/item_availability_user_profile_picture" />

    <ImageView
        android:id="@+id/item_availability_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/blank_content_description" />

</RelativeLayout>